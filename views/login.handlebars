<div class="row">

  <div class="col-md-6">
    <h2>Login</h2>
    <form class="form login-form">
      
      <div class="mb-3 mt-3">
        <label for="email-login" class="form-label">Email:</label>
        <input type="text" class="form-control form-input" id="email-login" placeholder="Enter email" name="email">
      </div>

      <div class="mb-3">
        <label for="password-login" class="form-label">Password:</label>
        <input type="password" class="form-control form-input" id="password-login" placeholder="Enter password" name="pswd">
      </div>

      <button type="submit" class="btn btn-primary">login</button>

    </form>
  </div>

  <div class="col-md-6">
    <h2>Signup</h2>
    <form class="form signup-form">

      <div class="mb-3 mt-3">
        <label for="name-signup" class="form-label">User Name:</label>
        <input type="text" class="form-control form-input" id="name-signup" placeholder="User Name" name="name">
      </div>

      <div class="mb-3 mt-3">
        <label for="email-signup" class="form-label">Email:</label>
        <input type="text" class="form-control form-input" id="email-signup" placeholder="Enter email" name="email">
      </div>

      <div class="mb-3">
        <label for="password-signup" class="form-label form-input">Password:</label>
        <input type="password" class="form-control" id="password-signup" placeholder="Enter password" name="pswd">
      </div>

      <button type="submit" class="btn btn-primary">signup</button>

    </form>
  </div>
</div>


<script src="./js/login.js"></script>